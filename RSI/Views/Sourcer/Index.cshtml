            if (mtl_type == "Special")
                mtl_type = "Special Parts";
            var result = [];
            $.each(data, function (index, value) {
                if (value.ISASSIGNER === 'Y' && value.ISCALCULATE == 'Y' && (value.PRICE_PM == "" || value.PRICE_PM == null || value.PRICE_PM == 0) && value.MTL_GROUP !== '總計') {
