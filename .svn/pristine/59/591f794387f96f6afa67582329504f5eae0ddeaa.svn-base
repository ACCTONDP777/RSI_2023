
@{
    Layout = null;
}

@section custom_script {
$(function () {
    $('input').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%' // optional
    });
});
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Web UI Template | 登入</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/bundles/login/style")
</head>

<!--body Class選項:
|----------------------------------|
| skin-blue                        |
| skin-navy                        |
| skin-yellow                      |
| skin-red                         |
| skin-green                       |
|----------------------------------|
-->
<body class="login-page skin-blue-light">
    <div class="login-box">
        <div class="login-logo">
            <div><img src="@Url.Content("~/Content/images/logo.png")"></div>
            <b>Site</b>Name
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <form action="@Url.Action("Index", "Home")" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="User Name">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登入</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <a href="#">忘記密碼</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- REQUIRED JS SCRIPTS -->
    @Scripts.Render("~/bundles/login/script");
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>

